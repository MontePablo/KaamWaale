<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/item_order_root_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_half_round_corner_white">

    <ImageView
        android:id="@+id/item_order_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/item_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_order_image"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Repair your AC Fridge"
        android:textSize="20sp"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="quantity"
        app:layout_constraintLeft_toRightOf="@id/item_order_image"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/item_order_quantity"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@id/textView2"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/textView"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="status"
        app:layout_constraintLeft_toRightOf="@id/item_order_image"
        app:layout_constraintTop_toBottomOf="@id/item_order_title"/>
    <TextView
        android:id="@+id/item_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Delivered"
        android:textColor="#C63405"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/item_order_title" />
    <TextView
        android:id="@+id/item_order_dateTime"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="10.02.21 19:38"
        app:layout_constraintTop_toBottomOf="@id/item_order_image"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/item_order_review"
        android:layout_width="89dp"
        android:layout_height="33dp"
        android:layout_margin="2dp"
        android:background="@drawable/shape_round_corner_offwhite_deep"
        android:text="give review"
        android:textAllCaps="false"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


        


</androidx.constraintlayout.widget.ConstraintLayout>