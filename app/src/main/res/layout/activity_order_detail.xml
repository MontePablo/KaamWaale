<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_backround_reverse"
    tools:context=".OrderDetail">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="order details"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textView"/>
    <ImageView
        android:layout_margin="8dp"
    android:id="@+id/order_detail_image"
    android:layout_width="0dp"
    app:layout_constraintWidth_percent=".4"
    android:layout_height="100dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textView"/>
    <TextView
        android:background="@drawable/gradient_backround"
        android:layout_margin="8dp"
        android:id="@+id/order_detail_title"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:text="fix your home apliance at very low price"
        app:layout_constraintLeft_toRightOf="@id/order_detail_image"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="package name"
        android:id="@+id/order_detail_packageName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_image"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_packageName"
        android:text="price"/>
    <TextView
        android:id="@+id/order_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="85"
        app:layout_constraintTop_toBottomOf="@id/order_detail_packageName"
        app:layout_constraintLeft_toRightOf="@id/textView2"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="rupees"
        app:layout_constraintLeft_toRightOf="@id/order_detail_price"
        app:layout_constraintTop_toBottomOf="@id/order_detail_packageName"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_margin="8dp"
        android:text="quantity"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_detail_quantity"
        app:layout_constraintLeft_toRightOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_margin="8dp"
        android:text="5"/>
    <TextView
        android:id="@+id/order_detail_dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.07.2021 17:54"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_quantity"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lyt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_dateTime"
        android:orientation="vertical">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/seller_dlvry_instrctn_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/textView7"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Instruction"/>
            <EditText
                android:id="@+id/seller_instruction"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:textSize="15sp"
                android:hint="intruction to the client about receiving process of the delivery"
                android:background="@drawable/shape_half_round_corner_white"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/buyer_instrctn_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@id/textView4"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Instruction"/>
            <TextView
                android:id="@+id/client_instruction"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:textSize="15sp"
                android:hint="intruction to the client about receiving process of the delivery"
                android:background="@drawable/shape_half_round_corner_white"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lyt"
        android:layout_height="wrap_content"
        android:id="@+id/cnfirmlyout">
        <TextView
            android:id="@id/textView5"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Project Delivered?"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <Button
            android:padding="3dp"
            android:layout_margin="8dp"
            android:text="Confirm"
            android:background="@drawable/gradient_signin"
            android:id="@+id/confirm_dlvry_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/report_dispute_btn"/>
        <Button
            android:textAllCaps="false"
            android:padding="3dp"
            android:layout_margin="8dp"
            android:id="@+id/report_dispute_btn"
            android:background="@drawable/gradient_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim dispute"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:layout_constraintLeft_toRightOf="@id/confirm_dlvry_btn"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/order_detail_payment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7B07DD"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cnfirmlyout"
        android:layout_margin="8dp"/>
<!--    Payment Received into your account!-->
<!--    Payment released toward seller account!-->




</androidx.constraintlayout.widget.ConstraintLayout>